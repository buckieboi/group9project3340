<h1>New Transaction</h1>

<%= form_with model: @transaction, local: true do |form| %>
  <div>
    <%= form.label :amount %>
    <%= form.number_field :amount, step: 0.01, required: true %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_field :description, required: true %>
  </div>

  <div>
    <%= form.label :transaction_date, "Date" %>
    <%= form.date_field :transaction_date, required: true %>
  </div>

  <div>
    <%= form.label :transaction_type %>
    <%= form.select :transaction_type, [['Income', 'income'], ['Expense', 'expense'], ['Withdrawal', 'withdrawal'], ['Savings', 'saving']], required: true %>
  </div>

  <div>
    <%= form.label :category %>
    <%= form.text_field :category %>
  </div>

  <div>
    <%= form.label :due_date, "Due Date (if applicable)" %>
    <%= form.date_field :due_date %>
  </div>

  <div>
    <%= form.submit "Save Transaction" %>
  </div>
<% end %>

<%= link_to 'Back', transactions_path %>
