<h1>Sign Up</h1>

<%= form_with(model: @user, url: signup_path, local: true) do |f| %>
  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true %>
  </div>
  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.submit "Sign Up" %>
  </div>
<% end %>
