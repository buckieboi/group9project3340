<h1>New Expense</h1>

<%= form_with(model: @expense, local: true) do |f| %>
  <div>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :amount %><br>
    <%= f.number_field :amount, step: 0.01 %>
  </div>
  <div>
    <%= f.submit "Add Expense" %>
  </div>
<% end %>
