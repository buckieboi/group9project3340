<h1>Expenses for Budget: <%= @budget.name %></h1>

<% if @expenses.present? %>
  <table>
    <thead>
      <tr>
        <th>Description</th>
        <th>Amount</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <td><%= expense.description %></td>
          <td><%= number_to_currency(expense.amount) %></td>
          <td><%= expense.created_at.strftime("%b %d, %Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No expenses recorded.</p>
<% end %>

<%= link_to "Add New Expense", new_expense_path(budget_id: @budget.id) %>
